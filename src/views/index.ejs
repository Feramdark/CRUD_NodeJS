                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
        </div>
        </div>
        <div class="row p-2">
            <div class="col-auto">
                <img src="https://i.ibb.co/T0t5byW/icon.png" alt="..." class="rounded-2 border-1">
            </div>
            <div class="col-md-5">
                <p> sectetur adipisicing elit. Rerum earum amet quasi dignissimos voluptas.<br> 
                    Qui voluptatum debitis magnam doloremque omnis sit officia corrupti. <br>
                     A suscipit sunt nihil  <br> iusto reprehenderit itaque?</p>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <legend class="display-7">Set a new data</legend>
                        <form action="/add" method="POST" class="mb-3">
                            <div class="form-group mb-3" >
                                <input type="text" name="nombre" placeholder="Set Name" class="form-control" required>
                            </div>
                            <div class="form-group mb-3">
                                <input id="my-input" class="form-control" type="text" name="valores" placeholder="Ritmo Cardiaco" required>
                            </div>
                            <button class="btn  btn-success float-end p-1 mb-2" >Send Data</button>
                        </form>
                    </div>
                </div>
            </div>    
        </div>

        <div class="row">
          <div class="col">
          <canvas id="chart" width="800" height="260">
          </div>
          </canvas>
        </div>
    </div>
    <% 

    var arreglo = [];
    var arreglo1 = [];
       for(var i=0; i < valores.length; i++){

           arreglo[i] = valores[i].nombre;
           arreglo1[i] = valores[i].valores;

       }
    %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script>
        const datos = "<%= arreglo %>";
        const dts = "<%= arreglo1 %>";

        const filas = datos.split(',').slice(0);
        const filas1 = dts.split(',').slice(0);

        
        const ctx = document.getElementById('chart')
        const dataSet = document.getElementById('name');

        const myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: filas,
        datasets: [{
            label: 'Medidor de potencia',
            data: filas1,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 2
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

